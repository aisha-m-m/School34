@{
    ViewData["Title"] = "Вход администратора";
}
<h2 class="mb-3">Вход администратора</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<form method="post">
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Код</label>
            <input name="code" class="form-control" required />
        </div>
        <div class="col-md-4">
            <label class="form-label">Пароль</label>
            <input name="password" type="password" class="form-control" required />
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Войти</button>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Отмена</a>
    </div>
</form>

<p class="text-muted mt-3">Подсказка: измените значения Admin:Code и Admin:Password в appsettings.json.</p>

