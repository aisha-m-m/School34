@model School34.Models.ScheduleEntry
@{
    ViewData["Title"] = "Редактировать занятие";
}
<h2>@ViewData["Title"] (@Model.ClassName)</h2>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Класс</label>
            <input asp-for="ClassName" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">День</label>
            <select asp-for="Day" class="form-select" asp-items="Html.GetEnumSelectList<DayOfWeek>()"></select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Время</label>
            <input asp-for="Time" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Предмет</label>
            <input asp-for="Subject" class="form-control" />
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a class="btn btn-secondary" asp-action="Index" asp-route-cls="@Model.ClassName">Отмена</a>
    </div>
</form>

